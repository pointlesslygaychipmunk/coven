{
    "extends": "../../tsconfig.base.json", // Inherit base settings
    "compilerOptions": {
      /* Specific overrides for the shared package */
      "target": "ESNext",          // Use modern target, compatible with others
      "module": "NodeNext",        // Use NodeNext module system (aligns with backend)
      "moduleResolution": "NodeNext", // Use NodeNext resolution
      "outDir": "./dist",          // Output directory for compiled JS and declaration files
      "rootDir": "./src",          // Source files are in the 'src' directory
      "baseUrl": ".",              // Base URL for path resolution (often needed with rootDir)
  
      /* Project Reference Settings (Crucial) */
      "composite": true,           // *** THIS IS REQUIRED for project references ***
      "declaration": true,         // Generate .d.ts files (needed by composite)
      "declarationMap": true,      // Generate source maps for .d.ts files (good for debugging)
      "sourceMap": true,           // Generate .js.map files
  
      /* Other options inherited from base or set here */
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"], // Compile all .ts files within the src directory
    "exclude": ["node_modules", "dist"] // Exclude dependencies and build output
  }