{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler", // Bundler is good for Vite
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "coven-shared": ["../shared/src/index.ts"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@images/*": ["./src/images/*"]
    },
    "composite": true
  },
  "include": ["src", "vite.config.ts", "src/index.tsx"],
  "references": [{ "path": "../shared" }]
}