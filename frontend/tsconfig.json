{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "module": "ESNext",
      "skipLibCheck": true,
      /* Bundler mode */
      "moduleResolution": "Bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      // Aliases must match vite.config.ts
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["../shared/src/*"],
        "coven-shared": ["../shared/src/index.ts"], // Explicit path for package import
        "@components/*": ["./src/components/*"],
        "@utils/*": ["./src/utils/*"],
        "@images/*": ["./src/images/*"]
      },
      "composite": true
    },
    "include": ["src", "vite.config.ts"],
    "references": [{ "path": "../shared" }]
  }