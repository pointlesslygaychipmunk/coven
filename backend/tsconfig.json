{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "composite": true,
    "types": ["node", "express"],
    "baseUrl": ".",
    "paths": {
      "coven-shared": ["../shared/src/index.ts"],
      "coven-shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../shared" }
  ]
}