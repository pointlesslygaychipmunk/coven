{
  "name": "coven-backend",
  "version": "1.0.0",
  "description": "Backend server for Coven game",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "dev": "tsc -p tsconfig.json --watch & node --watch dist/server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "coven-shared": "workspace:*",
    "express": "^4.18.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/socket.io": "^3.0.2",
    "typescript": "^5.5.4"
  }
}